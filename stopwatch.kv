BoxLayout:
    orientation: 'vertical'
    Label:
        id: time
        text: "[b]00[/b]:00:00"
        font_size: 60
        markup: True
    BoxLayout:
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        height: 90
        size_hint: (1, None)
        Button:
            text: 'Start'
            id: start_stop
            font_size: 25
            bold: True
            background_normal: 'blue_normal.png'
            background_down: 'blue_down.png'
            on_press: app.start_stop()
        Button:
            id: reset
            text: 'Reset'
            font_size: 25
            bold: True
            background_normal: 'red_normal.png'
            background_down: 'red_down.png'
            on_press: app.reset()
    Label:
        id: stopwatch
        text: "00:00.[size=40]00[/size]"
        font_size: 60
        markup: True
